{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  // Database
  "ConnectionStrings": {
    // Microsoft SQl server
    // Create a database in your MSSQl server manually before copying ConnectionString from 'SQL Server Object Explorer'
    "MSSQLConnection": ""
  },

  // Authentication
  "Authentication": {
    "Google": {
      // Google link https://console.cloud.google.com/apis/credentials
      // Document https://learn.microsoft.com/en-us/aspnet/core/security/authentication/social/google-logins
      "ClientSecret": "",
      "ClientId": ""
    },
    "Facebook": {
      // Facebook link https://developers.facebook.com/apps
      // Document https://learn.microsoft.com/en-us/aspnet/core/security/authentication/social/facebook-logins
      "AppSecret": "",
      "AppId": ""
    }
  },

  // Mail
  "Email": {
    "Google": {
      "API": {
        // Google Api link https://console.cloud.google.com/apis/credentials
        "Key": ""
      },
      "SMTP": {
        // Google SMTP link https://myaccount.google.com/apppasswords
        // GitHub example https://github.com/ZNAXNOR/EmailSMTP
        "Host": "smtp.gmail.com", //Default
        "Port": 587, // Default recomended
        "Username": "", // Your App secret account Email
        "Password": "" // Your App secret
      }
    }
